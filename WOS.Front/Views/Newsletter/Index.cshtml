@using WOS.Model;

@{
    ViewData["Title"] = "Simulateur de Mail";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Email</title>
</head>
<body style="margin:0; padding:0; background-color:#f4f4f4;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="background-color:#f4f4f4;">
        <tr>
            <td align="center">
                <table role="presentation" width="600" cellspacing="0" cellpadding="0" border="0" style="background-color:#ffffff; padding:20px; font-family:Arial, sans-serif;">

                    <!-- HEADER -->
                    <tr>
                        <td align="center" style="padding-bottom:20px;">
                            <img src="https://wossneakers.fr/src/WosLogos/logoWosBlack.png" width="200" alt="Logo">
                        </td>
                    </tr>

                    <!-- TITRE -->
                    <tr>
                        <td align="center" style="font-size:24px; font-weight:bold; padding-bottom:50px;">
                            Votre commande a été livrée
                        </td>
                    </tr>

                    <!-- TEXTE -->
                    <tr>
                        <td align="left" style="font-size:16px; line-height:24px; color:#333;">
                            Bonjour {prenom},<br>
                            <br>
                            Bonne nouvelle ! Nous vous informons que votre commande a été livrée à l'adresse suivante : <br>
                            <br>
                            <strong style="display: block; text-align: center;">{adresse}</strong><br>
                            <div style="display: flex; flex-direction: column; border: 3px solid black; border-radius: 15px; padding: .5em; margin-bottom: 2vh;">
                                {listProduits}
                            </div>
                            Si le service vous a plus, n'hésitez pas à nous laisser votre avis !
                        </td>

                    <!-- BOUTON -->

                    <tr>
                        <td align="center" style="padding-top:50px;">
                            <a href="https://wossneakers.fr/Account" style="background-color:black; color:#ffffff; padding:10px 20px; text-decoration:none; border-radius:5px; font-size:16px;">Mettre un avis</a>
                        </td>
                    </tr>

                    <!-- FOOTER -->
                    <tr>
                        <td align="center" style="font-size:12px; color:#777; padding-top:25px;">
                            @* Vous recevez cet email parce que vous êtes abonné. <br>
                            <a href="#" style="color:#007bff; text-decoration:none;">Se désinscrire</a> *@
                            <strong>L'équipe WOS Sneakers.</strong> <br />
                            <a href="https://wossneakers.fr">WOS Sneakers</a> -
                            <a href="https://wossneakers.fr/Account">Mon compte</a><br />
                            Mentions légales.
                        </td>
                    </tr>

                </table>
            </td>
        </tr>
    </table>
</body>
</html>